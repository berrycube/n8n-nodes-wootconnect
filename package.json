{
  "name": "n8n-suite",
  "version": "0.1.0",
  "private": true,
  "description": "n8n suite: public plugins + private integration + commercial extensions",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.15",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "dev": "pnpm -r --parallel run dev",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "bootstrap": "pnpm install && pnpm build",
    "check:types": "pnpm -r run typecheck",
    "check:security": "pnpm audit && pnpm -r run security-scan"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "vite": "^5.1.4",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "prettier": "^3.2.5"
  },
  "workspaces": ["public/*", "private/*", "private/n8n-pro-extensions/packages/*"]
}